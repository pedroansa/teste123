{
    "extends": "@tsconfig/node18/tsconfig.json",
    "compilerOptions": {
        "lib": ["es2023"],
        "module": "CommonJS",
        "moduleResolution": "Node10",
        "target": "es2022",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["jest", "node"]
    },
    "include": ["stacks", "sst.config.ts", "sst.config-frontend.ts"]
}
